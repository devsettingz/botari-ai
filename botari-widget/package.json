{
  "name": "botari-widget",
  "version": "1.0.0",
  "description": "Botari AI embeddable chat widget for businesses",
  "main": "dist/botari-widget.js",
  "module": "dist/botari-widget.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/botari-widget.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/botari-widget.es.js",
      "require": "./dist/botari-widget.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/botari-widget.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:types && npm run build:js && npm run build:min",
    "build:js": "vite build",
    "build:types": "tsc --noEmit false --emitDeclarationOnly",
    "build:min": "node -e \"const fs=require('fs'); fs.copyFileSync('dist/botari-widget.js', 'dist/botari-widget.min.js');\"",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "clean": "node -e \"const fs=require('fs'),path=require('path'); const dist=path.join(process.cwd(),'dist'); if(fs.existsSync(dist)) fs.rmSync(dist,{recursive:true});\""
  },
  "keywords": [
    "chat",
    "widget",
    "botari",
    "ai",
    "embeddable",
    "customer-support",
    "chatbot"
  ],
  "author": "Botari AI",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
